{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5" >Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Titre</td>
                    <td>Auteur</td>
                    <td>RÃ©servations</td>
                    <td>Note</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                {% for ad in ads %}
                    <tr>
                        <td>{{ ad.id }}</td>
                        <td>{{ ad.title }}</td>
                        <td>
                            <img src="{{ ad.author.picture }}" class="avatar avatar-mini mr-2">
                            {{ ad.author.fullName }}
                        </td>
                        <td class="text-center">
                            <span class="badge badge-primary">{{ ad.bookings | length }}</span>
                        </td>
                        <td class="text-center">
                            <span class="badge badge-primary">{{ ad.avgRatings | number_format(1,',', ' ') }}</span>
                        </td>
                        <td>
                            <a href="{{ path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_ads_delete', {'id': ad.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
