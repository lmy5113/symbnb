<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewpoint" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title>Connexion à l'adminisitration</title>
		{{ encore_entry_script_tags('js/app') }}
		{{ encore_entry_link_tags('css/app') }}
		<script src="https://kit.fontawesome.com/63e696dbc9.js" crossorigin="anonymous"></script>
        <style>
            body {
                display: flex;
                justify-content: center;
                height: 100vh; 
            }

            .card {
                margin-top: 10%;
            }
        </style>
    </head>
	<body>
		<div class="col-md-4">
			<div class="card bg-light">
				<div class="card-header">
					<i class="fas fa-lock"></i>
					Connexion à l'adminisitration
				</div>
				<div lass="card-body">
                    {% if hasError %}
                        <div class="alert alert-warning">
                            <p>incorrect</p>
                        </div>
                    {% endif %}
                    
					<form method="post">
						<div class="form-group">
							<label for="_username">Email</label>
							<input type="text" class="form-control" value="{{ username }}" placeholder="Adresse email" name="_username">
						</div>
						<div class="form-group">
							<label for="_password">Mot de passe</label>
							<input type="password" class="form-control" placeholder="Mot de passe" name="_password">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">
								<i class="fas fa-lock-open"></i>
								Connexion
							</button>
							<a href="{{ path('homepage') }}" class="btn btn-link">
								<i class="fas fa-arrow-circle-left"></i>
								Retour au site
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>
